@{
    Layout = "_default";
}

<!-- form_1_1 -->
<div class="container-md container-md-fixed d-flex flex-fill">
    <form action="/Home/Form" method="post">

        <!-- customer -->
        <div class="card card-primary card-outline">
            <!-- title -->
            <div class="card-header">
                <h3 class="card-title">客戶資料</h3>
            </div>
            <!-- content -->
            <div class="card-body">
                <div class="row form-group">
                    <label class="col-auto form-label"   for="inputName">客戶姓名：</label>
                    <input class="col      form-control" id="inputName" type="text" />
                </div>
                <div class="row form-group">
                    <label class="col-auto form-label"   for="inputPhone">客戶電話：</label>
                    <input class="col      form-control" id="inputPhone" type="text" />
                </div>
                <div class="row form-group">
                    <label class="col-auto form-label"   for="inputAddress">客戶地址：</label>
                    <input class="col      form-control" id="inputAddress" type="text" />
                </div>
                <div class="row form-group">
                    <label class="col-auto form-label"   for="inputMessage">客戶備註：</label>
                    <textarea class="col   form-control" id="inputMessage" type="text" rows="5"></textarea>
                </div>
                <div class="row form-group">
                    <div class="col-auto ml-auto">
                        <a class="btn btn-rounded btn-outline-secondary" href="/"><i class="fa fa-times"></i>&nbsp;取消</a>
                        <a class="btn btn-rounded btn-primary" href="/"><i class="fa fa-check"></i>&nbsp;儲存</a>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>